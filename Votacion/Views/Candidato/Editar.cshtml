@model Votacion.Models.Entidades.Candidato

@{
    ViewData["Title"] = "Editar";
    Layout = null;
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header text-center">
            <h5>Editar Candidato</h5>
        </div>
        <div class=" card-body text-center">
            <form asp-controller="Candidato" asp-action="Editar" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdCandidato" />

                    <div class="mb-3">
                    <input type="file" class="form-control" name="Imagen">
                </div>
          
                <div class="mb-3">
                    <input class="form-control" type="text" placeholder="Nombre" asp-for="NombreCandidato" required />
                </div>
                <div class="mb-3">
                    <input class="form-control" type="text" placeholder="Apellido" asp-for="ApellidoCandidato" required />
                </div>
                <div class="mb-3">
                    <input class="form-control" type="text" placeholder="Mensaje" required asp-for="Mensaje" required />
                </div>          
                <div class="form-group">
                    <label for="IdEleccion">Eleccion</label>
                    <select asp-for="IdEleccion" class="form-control" asp-items="@(ViewData["Elecciones"] as SelectList)"></select>
                    <span asp-validation-for="IdEleccion" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="FechaRegistro">FechaRegistro</label>
                    <input asp-for="FechaRegistro" class="form-control" placeholder="Fecha de Registro" />
                    <span asp-validation-for="FechaRegistro" class="text-danger"></span>
                </div>

                <div class="card-footer">
                    <div class="form-group">
                        <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-save"></i> Guardar</button>
                        <a asp-action="ListadoCandidato" class="btn btn-sm btn-primary"><i class="fa fa-ban"></i> Cancelar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>