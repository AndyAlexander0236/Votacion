@model Votacion.Models.Entidades.Candidato

@{
    ViewData["Title"] = "Editar";
    Layout = null;
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header text-center">
            <h5>Editar Candidato</h5>
        </div>
        <div class="card-body text-center">
            <form asp-action="Editar">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdCandidato" />


                <div class="form-group">
                    <label for="imgCandidato" class="control-label">Imagen del Candidato</label>
                    <input asp-for="imgCandidato" type="file" name="imgCandidato" />
                    <span asp-validation-for="imgCandidato" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="imgCandidato" class="control-label"></label>
                    <input asp-for="imgCandidato" type="file" name="imgCandidato" />
                    <span asp-validation-for="imgCandidato" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="NombreCandidato">Nombre</label>
                    <input asp-for="NombreCandidato" class="form-control" placeholder="Nombre" />
                    <span asp-validation-for="NombreCandidato" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="ApellidoCandidato">Apellido</label>
                    <input asp-for="ApellidoCandidato" class="form-control" placeholder="Apellido" />
                    <span asp-validation-for="ApellidoCandidato" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Mensaje">Mensaje</label>
                    <input asp-for="Mensaje" class="form-control" placeholder="Mensaje" />
                    <span asp-validation-for="Mensaje" class="text-danger"></span>
                </div>
              

                <div class="form-group">
                    <label for="FechaRegistra">FechaRegistro</label>
                    <input asp-for="FechaRegistro" class="form-control" placeholder="Fecha de Registro" />
                    <span asp-validation-for="FechaRegistro" class="text-danger"></span>
                </div>

                <div class="card-footer">
                    <div class="form-group">
                        <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-save"></i> Guardar</button>
                        <button type="button" class="btn btn-sm btn-primary" data-bs-dismiss="modal"><i class="fa fa-ban"></i> Cancelar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
