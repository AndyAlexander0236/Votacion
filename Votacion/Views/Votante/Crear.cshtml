@model Votacion.Models.Entidades.Votante

@{
    ViewData["Title"] = "Crear";
    Layout = null;

}
<div class="col-md-12">
    <div class="card">
        <div class="card-header text-center">
            <h5>Crear Votante</h5>
        </div>
        <div class="card-body text-center">
            <form asp-action="Crear">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label for="DocumentoIdentidad">Documento de Identidad</label>
                    <input asp-for="DocumentoIdentidad" class="form-control" placeholder="Documento de Identidad" />
                    <span asp-validation-for="DocumentoIdentidad" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="NombreVotante">Nombre</label>
                    <input asp-for="NombreVotante" class="form-control" placeholder="Nombre" />
                    <span asp-validation-for="NombreVotante" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="ApellidoVotante">Apellido</label>
                    <input asp-for="ApellidoVotante" class="form-control" placeholder="Apellido" />
                    <span asp-validation-for="ApellidoVotante" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="FechaRegistra">FechaRegistro</label>
                    <input asp-for="FechaRegistro" class="form-control" placeholder="Fecha de Registro" />
                    <span asp-validation-for="FechaRegistro" class="text-danger"></span>
                </div>
              
                <div class="card-footer">
                    <div class="form-group">
                        <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-save"></i> Guardar</button>
                        <button type="button" class="btn btn-sm btn-primary" data-bs-dismiss="modal"><i class="fa fa-ban"></i> Cancelar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
