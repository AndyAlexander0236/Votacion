@model Votacion.Models.Entidades.Usuario
@{
    ViewData["Title"] = "Editar";
    Layout = null;
}
<div class=" col-md-12">
    <div class=" card">
        <div class=" card-header text-center">
            <h5> Editar Usuario</h5>
        </div>
        <div class=" card-body text-center">
			<form asp-controller="Usuario" asp-action="Editar" method="post" enctype="multipart/form-data">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<input type="hidden" asp-for="IdUsuario" />

				<div class="mb-3">
					<input class="form-control" type="text" placeholder="Documento de identidad" asp-for="DocumentoIdentidad" required />
				</div>
				<div class="mb-3">
					<input class="form-control" type="text" placeholder="Nombre" asp-for="NombreUsuario" required />
				</div>
				<div class="mb-3">
					<input class="form-control" type="text" placeholder="Apellido" asp-for="ApellidoUsuario" required />
				</div>
				<div class="mb-3">
					<input class="form-control" type="text" placeholder="Correo" required asp-for="CorreoUsuario" required />
				</div>
				<div class="mb-3">
					<input class="form-control" type="password" placeholder="Contraseña" required asp-for="ClaveUsuario" required />
				</div>
				<br>
				<div class="mb-3">
					<input type="file" class="form-control" name="Imagen">
				</div>

				<div class="form-group">
					<label for="IdRol">Roles</label>
					<select asp-for="IdRol" class="form-control" asp-items='@(ViewData["Roles"] as List<SelectListItem>)'></select>
					<span asp-validation-for="IdRol" class="text-danger"></span>
				</div>

				<div class="card-footer">
					<div class="form-group">
						<button type="submit" class="btn btn-sm btn-success"><i class="fa fa-save"></i> Guardar</button>
						<button type="button" class="btn btn-sm btn-primary" data-bs-dismiss="modal"><i class="fa fa-ban"></i> Cancelar</button>
					</div>
				</div>
			</form>
        </div>
    </div>
</div>