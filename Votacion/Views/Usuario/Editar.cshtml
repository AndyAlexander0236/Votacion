@model Votacion.Models.Entidades.Usuario
@{
    ViewData["Title"] = "Editar";
    Layout = null;

}

<div class=" col-md-12">
    <div class=" card">
        <div class=" card-header text-center">
            <h5> Editar Usuario</h5>
        </div>
        <div class=" card-body text-center">
            <form asp-action="Editar">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdUsuario" />
                <div class="form-group">
                    <label></label>
                    <input asp-for="DocumentoIdentidad" class="form-control" placeholder="Cedula" />
                    <span asp-validation-for="DocumentoIdentidad" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label></label>
                    <input asp-for="NombreUsuario" class="form-control" placeholder=" Nombre" />
                    <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label></label>
                    <input asp-for="ApellidoUsuario" class="form-control" placeholder=" Apellido" />
                    <span asp-validation-for="ApellidoUsuario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Correo">Correo</label>
                    <input asp-for="CorreoUsuario" class="form-control" placeholder="Correo" />
                    <span asp-validation-for="CorreoUsuario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Clave">Clave</label>
                    <input asp-for="ClaveUsuario" type="password" class="form-control" placeholder="Clave" />
                    <span asp-validation-for="ClaveUsuario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Activo">Estado</label>
                    <input asp-for="Activo" type="checkbox" />
                    <span asp-validation-for="Activo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="TipoUsuario">Tipo de Usuario</label>
                    <select asp-for="TipoUsuario" class="form-control">
                        <option value="Administrador">Administrador</option>
                        <option value="Usuario">Usuario </option>
                    </select>
                    <span asp-validation-for="TipoUsuario" class="text-danger"></span>
                </div>

                <div class="card-footer">
                    <div class="form-group">
                        <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-save"></i> Guardar</button>
                        <button type="button" class="btn btn-sm btn-primary" data-bs-dismiss="modal"><i class="fa fa-ban"></i> Cancelar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>